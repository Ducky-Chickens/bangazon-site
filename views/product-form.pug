extends index.pug

block content
    //- form#addProduct(name='addProduct' method='post' action='/inventory/add')
    #productForm
        .productInput
            label(for='title') Product Title
            input(prop='title' name='title' type='text')
            span.errAstrik
        .productInput
            label(for='price') Price
            input(prop='price' name='price' type='text')
            span.errAstrik
        .productInput
            label(for='email') Description
            input(prop='email' name='email' type='text')
            span.errAstrik
        .productInput
            label(for='quantity') Quanity Available
            input(prop='quantity' name='quantity' type='number' min=1 value=1)
            span.errAstrik
        .productInput
            label(for='typeSelect') Product Type 
            select#typeSelect(prop='product_type_id')
                option(value=0)
                each prodType in productTypes
                    option(value=prodType.id) #{prodType.name}
            span.errAstrik
    .productSubmit
        input#addProductButton(type='submit' value='add product')
    #productFormError

block scripts
    script(src='../js/addProduct.js')
