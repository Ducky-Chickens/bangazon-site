extends index.pug

block content
    form#addProduct(name="addProduct" method="post" action="/inventory/add")
        .productInput
            label(for="title") Product Title
            input.text(id="title" name="title" type="text")
        .productInput
            label(for="price") Price
            input.text(name="price" type="text")
        .productInput
            label(for="email") Description
            input.text(name="email" type="text")
        .productInput
            label(for="confirmation") Quanity Available
            input(name="confirmation" type="number" min=1 value=1)
        .productInput
            input#addProductButton(type="submit" value="add product")